body {
  font-family: Arial;
  background: #f6f6f6;
}

.container {
  width: 400px;
  background: white;
  padding: 20px;
  margin: 40px auto;
  border-radius: 10px;
  box-shadow: 0px 0px 10px gray;
}

input, button {
  width: 100%;
  padding: 10px;
  margin-top: 10px;
}

button {
  background: #3498db;
  border: none;
  color: white;
  font-weight: bold;
}
